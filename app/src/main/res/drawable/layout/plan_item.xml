<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/background_sponsors">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/plan_item_image_view"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/plan_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="School Fees"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/plan_item_image_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/plan_item_image_view"
        app:layout_constraintTop_toTopOf="@+id/plan_item_image_view" />

    <ProgressBar
        android:id="@+id/funds_raised_progress_bar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="16dp"
        android:max="100"
        android:progress="40"
        android:progressDrawable="@drawable/progress_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plan_item_image_view" />

    <TextView
        android:id="@+id/funds_raised_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="40% Funds raised"
        android:textSize="12sp"
        android:textColor="@color/green_500"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/funds_raised_progress_bar" />

    <ProgressBar
        android:id="@+id/tasks_completed_progress_bar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="16dp"
        android:max="100"
        android:progress="10"
        android:progressDrawable="@drawable/progress_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/funds_raised_text_view" />

    <TextView
        android:id="@+id/tasks_completed_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10% Tasks Completed"
        android:textSize="12sp"
        android:textColor="@color/green_500"
        android:padding="4dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tasks_completed_progress_bar"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>