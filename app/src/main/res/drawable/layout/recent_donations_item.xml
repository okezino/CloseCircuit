<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/background_sponsors">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/sponsor_image_view"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="8dp"
        android:src="@drawable/diane_russell"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/plan_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Fish Farming"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/sponsor_image_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.878"
        app:layout_constraintStart_toEndOf="@+id/amount_donated_text_view" />

    <TextView
        android:id="@+id/donor_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Diane Russell"
        app:layout_constraintStart_toEndOf="@+id/sponsor_image_view"
        app:layout_constraintTop_toTopOf="@+id/sponsor_image_view" />

    <TextView
        android:id="@+id/amount_donated_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="NGN 20,000.00"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/sponsor_image_view"
        app:layout_constraintStart_toEndOf="@+id/sponsor_image_view"
        app:layout_constraintTop_toBottomOf="@+id/donor_name_text_view" />

</androidx.constraintlayout.widget.ConstraintLayout>