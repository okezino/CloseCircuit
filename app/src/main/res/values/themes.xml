<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ClosedCircuitApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_700</item>
        <item name="colorPrimaryVariant">@color/green_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ClosedCircuitApplication.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ClosedCircuitApplication.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ClosedCircuitApplication.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/spinner_dropdown_style</item>
    </style>

    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipIconTint">@color/white</item>
        <item name="chipBackgroundColor">#B7E143</item>
        <item name="checkedIconVisible">false</item>
        <item name="shapeAppearanceOverlay">@null</item>
        <item name="chipMinHeight">40dp</item>
        <item name="fontFamily">@font/helvetica</item>
    </style>
    
    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle" > @style/BottomSheetStyle</item>
    </style>
    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Fragment_CreateAccount_TextInputLayout_style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_20dp</item>
        <item name="android:layout_marginTop">@dimen/margin_20dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_20dp</item>
        <item name="boxBackgroundColor">@color/text_input_color</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/boxCornerRadius_10dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/boxCornerRadius_10dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/boxCornerRadius_10dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/boxCornerRadius_10dp</item>
        <item name="boxStrokeColor">@color/green_500</item>
        <item name="boxStrokeWidthFocused">2dp</item>
    </style>

    <style name="Fragment_EditProfile_Dropdown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="background">@android:color/black</item>
        <item name="boxBackgroundColor">@color/text_input_color</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/margin_10dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/margin_10dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/margin_10dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/margin_10dp</item>

    </style>

    <style name= "CreateAccountFragmentTextView_style" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_20dp</item>
        <item name="android:layout_marginTop">@dimen/margin_10dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_20dp</item>
        <item name="android:textColor">#24500F</item>
    </style>

    <style name= "CreateAccountFragment_error_message_textView_style" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_20dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_20dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#8A8A8E</item>
    </style>


    <style name="Fragment_CreateAccount_Button_style" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_54dp</item>
        <item name="android:layout_marginStart">@dimen/margin_20dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_20dp</item>
        <item name="android:textSize">@dimen/textSize_16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/boxCornerRadius_10dp</item>
    </style>
    <style name="FragmentEditPlan_EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_54dp</item>
        <item name="android:background">@drawable/text_input_background_5dp</item>
        <item name="android:fontFamily">@font/helvetica</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:inputType">number</item>
        <item name="android:padding">@dimen/padding_10dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textSize_15sp</item>
    </style>






    <style name="Fragment_usersEditProfile_TextInputLayout_style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_20dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_20dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="boxBackgroundColor">#EBEFF2</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/boxCornerRadius_16dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/boxCornerRadius_16dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/boxCornerRadius_16dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/boxCornerRadius_16dp</item>
        <item name="boxStrokeColor">@color/green_500</item>
        <item name="boxStrokeWidth">@dimen/margin_0dp</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="Fragment_usersEditProfile_TextInputEditText_style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="boxBackgroundColor">#EBEFF2</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/boxCornerRadius_16dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/boxCornerRadius_16dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/boxCornerRadius_16dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/boxCornerRadius_16dp</item>
    </style>


    <style name= "UserEditProfile_textView_style" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_20dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_20dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/textSize_18sp</item>
        <item name="android:textColor">#8B8989</item>
        <item name="android:layout_gravity">left</item>
    </style>


    <style name= "DeletePlanDialog_Button_style" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_20dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/textSize_24sp</item>
        <item name="background">@drawable/custom_dialog_rectangle</item>
    </style>

    <style name= "DeletePlanDialog_textView_style" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_20dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_20dp</item>
        <item name="android:layout_marginTop">@dimen/margin_20dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textSize_24sp</item>
    </style>

    <style name= "LinearLayout_style" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_20dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:clickable">true</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">2</item>
    </style>


    <style name= "SupportLinearLayout_style" parent="SupportFragmentTextStyle">
        <item name="android:weightSum">0</item>
    </style>

    <style name="SupportFragmentTextStyle" parent="NormalBlackText">
        <item name="android:textSize">@dimen/textSize_18sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.8</item>
    </style>

    <!--    Text Styles-->
    <style name="NormalFaintText" parent="Theme.ClosedCircuitApplication">
        <item name="android:textSize">@dimen/textSize_15sp</item>
        <item name="android:textColor">@color/text_color_normal</item>
        <item name="fontFamily">@font/helvetica</item>
    </style>


    <style name="NormalBlackText" parent="NormalFaintText">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ParagraphTitleText" parent="NormalBlackText">
        <item name="fontFamily">@font/helvetica_bold</item>
        <item name="android:textSize">@dimen/textSize_20sp</item>
    </style>

    <style name="ScreenTitleText" parent="NormalBlackText">
        <item name="android:textSize">@dimen/textSize_24sp</item>
        <item name="fontFamily">@font/helvetica_bold</item>
    </style>

    <style name="ProfileTitleText" parent="NormalFaintText">
        <item name="android:textColor">@color/text_color_light_grey</item>
        <item name="android:layout_marginTop">@dimen/margin_15dp</item>

    </style>

    <style name="ProfileValueText" parent="ProfileTitleText">
        <item name="android:layout_marginTop">@dimen/margin_5dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/margin_17dp</item>
    </style>

    <style name="LoanOfferButton" parent="ClosedCircuitDefaultButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/height_54dp</item>
        <item name="android:textSize">@dimen/textSize_15sp</item>
        <item name="android:fontFamily">@font/helvetica</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">@dimen/margin_5dp</item>
        <item name="android:layout_marginTop">@dimen/margin_20dp</item>
        <item name="android:paddingBottom">@dimen/margin_15dp</item>
        <item name="cornerRadius">@dimen/margin_5dp</item>
    </style>

    <!--    Edit Text Styles-->

    <style name="LoanOfferText_style" parent="NormalFaintText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name= "LoanOfferLinearLayout_style" parent="LinearLayout_style">
        <item name="android:weightSum">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_20dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_20dp</item>
        <item name="android:orientation">vertical</item>
    </style>






    <!--    Button style-->
    <style name="ClosedCircuitDefaultButton" parent="Theme.ClosedCircuitApplication">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textSize_16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">@dimen/margin_15dp</item>
        <item name="android:paddingBottom">@dimen/margin_15dp</item>
        <item name="cornerRadius">@dimen/boxCornerRadius_10dp</item>
    </style>

    <style name="Color1SwitchStyle">
        <item name="colorControlActivated">@color/secondary_color</item>
    </style>

    <style name="Fragment_user_edit_profile_linear_layout_style" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Drawer_Text_Style" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">@dimen/textSize_15sp</item>
    </style>

    <!--  Settings custom text styles  -->
    <style name="TextStyle">
        <item name="fontFamily">@font/helvetica</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TCCHeaderTextStyle" parent="TextStyle">
        <item name="android:textSize">@dimen/textSize_18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TCCTitleTextStyle" parent="TextStyle">
        <item name="android:textSize">@dimen/textSize_24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TCCBodyText" parent="TextStyle">
        <item name="android:textSize">@dimen/textSize_16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TCCHintTextStyle" parent="TextStyle">
        <item name="android:textSize">@dimen/textSize_15sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/hint_color</item>
    </style>

    <style name="ClosedCircuitSwitchStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/height_24dp</item>
        <item name="android:checked">false</item>
        <item name="android:enabled">false</item>
        <item name="android:thumb">@drawable/custom_thumb</item>
        <item name="track">@drawable/custom_track</item>
    </style>

    <style name="SettingsLinearLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_40dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginLeft">@dimen/margin_20dp</item>
        <item name="android:layout_marginRight">@dimen/margin_20dp</item>
    </style>

    <style name="ClosedCircuitHorizontalLine">
        <item name="android:layout_marginTop">@dimen/margin_25dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_20dp</item>
        <item name="android:layout_marginRight">@dimen/margin_20dp</item>
        <item name="background">@color/line_color</item>
    </style>

    <style name="SettingsEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_54dp</item>
        <item name="android:layout_marginTop">@dimen/margin_20dp</item>
        <item name="android:paddingLeft">@dimen/padding_10dp</item>
        <item name="android:paddingRight">@dimen/padding_10dp</item>
        <item name="android:background">@drawable/text_input_background_16dp</item>
        <item name="fontFamily">@font/helvetica</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:importantForAccessibility">no</item>
        <item name="android:inputType">text</item>
        <item name="maxLines">2</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textSize_15sp</item>
    </style>

    <style name="TCCDefaultButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/rectangle_button</item>
        <item name="fontFamily">@font/helvetica</item>
        <item name="android:paddingTop">@dimen/padding_10dp</item>
        <item name="android:paddingBottom">@dimen/padding_10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textSize_15sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TCCDefaultButtonStyleGrey" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/rectangle_button_gray</item>
        <item name="fontFamily">@font/helvetica</item>
        <item name="android:paddingTop">@dimen/padding_10dp</item>
        <item name="android:paddingBottom">@dimen/padding_10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textSize_15sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SettingsDropDownStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="android:layout_marginStart">@dimen/margin_20dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_20dp</item>
        <item name="android:paddingTop">@dimen/margin_16dp</item>
        <item name="android:paddingBottom">@dimen/margin_16dp</item>
        <item name="boxBackgroundColor">@color/grey_box_background</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/radius_5dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/radius_5dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radius_5dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/radius_5dp</item>
        <item name="boxStrokeColor">@color/grey_box_background</item>
        <item name="boxStrokeWidth">@dimen/margin_0dp</item>
        <item name="endIconDrawable">@drawable/end_icon_dropdown_drawable</item>
        <item name="endIconMode">dropdown_menu</item>
        <item name="endIconTint">@color/closed_circuit_dark_green</item>
    </style>

    <style name="TCCTabLayoutStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@color/closed_circuit_progress_background_tint</item>
        <item name="tabMode">scrollable</item>
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabSelectedTextColor">@color/body_text_color</item>
        <item name="tabTextColor">@color/body_text_color</item>
    </style>
    <style name="CircularDeterminateProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/determinant_circular_progress_bar</item>
    </style>

</resources>