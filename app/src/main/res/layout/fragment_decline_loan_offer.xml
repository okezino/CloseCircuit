<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/background1"
xmlns:app="http://schemas.android.com/apk/res-auto"
tools:context=".beneficiary.loan.presentation.ui.screens.DeclineLoanOfferFragment">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/decline_loan_tv"
        style="@style/ParagraphTitleText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margin_20dp"
        android:layout_marginTop="@dimen/height_50dp"
        android:text="@string/decline_loan_off"
        android:textColor="@color/green_700"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/type_message_tv"
        style="@style/NormalBlackText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_20dp"
        android:layout_marginTop="@dimen/margin_34dp"
        android:text="@string/type_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/decline_loan_tv" />

    <EditText
        android:id="@+id/decline_message_Et"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_161dp"
        android:layout_margin="@dimen/margin_20dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:background="@color/gray_600"
        android:gravity="top"
        android:padding="@dimen/textSize_10sp"
        android:inputType="textMultiLine"
        app:layout_constraintTop_toBottomOf="@+id/type_message_tv"
        tools:layout_editor_absoluteX="20dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/decline_loan_btn"
        style="@style/LoanOfferButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_70dp"
        android:layout_marginEnd="@dimen/margin_20dp"
        android:layout_marginStart="@dimen/margin_20dp"
        android:text="@string/decline"
        android:textColor="@color/white"
        app:backgroundTint="@color/main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/decline_message_Et" />
</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>