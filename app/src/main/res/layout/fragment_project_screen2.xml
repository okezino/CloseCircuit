            <TextView
                android:id="@+id/start_a_plan_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="42dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/helvetica"
                android:text="Start a Plan"
                android:textColor="@color/upload_image_button_color"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/start_a_plan_icon"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />
            <ImageView
                android:id="@+id/start_a_plan_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/plus_circle"
                app:layout_constraintBottom_toBottomOf="@+id/start_a_plan_tv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/start_a_plan_tv" />
            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="136dp"
                android:src="@drawable/no_project_illustraion"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/start_a_plan_tv" />

            [08:28] Emmanuel Orunimighen
            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/helvetica_bold"
                android:text="No Plans"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView4" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/helvetica"
                android:text="@string/start_a_plan_text"
                android:textAlignment="center"
                android:textColor="#8A8A8E"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>