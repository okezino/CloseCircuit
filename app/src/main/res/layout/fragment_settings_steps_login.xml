<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".settings.presentation.ui.screens.SettingsStepsLoginFragment">

    <!--    Settings toolbar-->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/fragment_settings_step_login_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_10dp"
        android:paddingRight="@dimen/padding_10dp"
        app:elevation="@dimen/elevation_4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/fragment_settings_steps_login_backArrow_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_button"
            tools:ignore="ContentDescription"/>

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/fragment_settings_steps_login_tv"
        style="@style/TCCHeaderTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_20dp"
        android:layout_marginTop="@dimen/margin_36dp"
        android:text="@string/_2_step_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_settings_step_login_toolbar" />

    <TextView
        android:id="@+id/fragment_settings_steps_login_email_tv"
        style="@style/TCCBodyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_20dp"
        android:layout_marginTop="@dimen/margin_50dp"
        android:layout_gravity="center_vertical"
        android:text="@string/email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_settings_steps_login_tv" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/fragment_settings_steps_login_switch"
        style="@style/ClosedCircuitSwitchStyle"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_settings_steps_login_email_tv"
        app:layout_constraintEnd_toEndOf="parent"
        android:enabled="false"
        android:layout_marginEnd="@dimen/margin_20dp"
        app:layout_constraintTop_toTopOf="@+id/fragment_settings_steps_login_email_tv"
        tools:ignore="TouchTargetSizeCheck" />

    <View
        android:id="@+id/fragment_settings_steps_login_line1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/margin_12dp"
        android:layout_marginLeft="@dimen/margin_20dp"
        android:layout_marginRight="@dimen/margin_20dp"
        android:background="@color/line_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_settings_steps_login_switch" />

    <TextView
        android:id="@+id/fragment_settings_steps_login_sms_tv"
        style="@style/TCCBodyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_40dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/margin_20dp"
        android:text="@string/sms"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_settings_steps_login_line1"
        />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/fragment_settings_steps_login_sms_switch"
        style="@style/ClosedCircuitSwitchStyle"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_settings_steps_login_sms_tv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/margin_20dp"
        app:layout_constraintTop_toTopOf="@+id/fragment_settings_steps_login_sms_tv"
        tools:ignore="TouchTargetSizeCheck" />

    <View
        android:id="@+id/fragment_settings_steps_login_line2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/margin_12dp"
        android:layout_marginLeft="@dimen/margin_20dp"
        android:layout_marginRight="@dimen/margin_20dp"
        android:background="@color/line_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_settings_steps_login_sms_tv" />

    <TextView
        android:id="@+id/fragment_settings_steps_login_never_tv"
        style="@style/TCCBodyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_40dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/margin_20dp"
        android:text="@string/never"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_settings_steps_login_line2"
        />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/fragment_settings_steps_login_never_switch"
        style="@style/ClosedCircuitSwitchStyle"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_settings_steps_login_never_tv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/margin_20dp"
        app:layout_constraintTop_toTopOf="@+id/fragment_settings_steps_login_never_tv"
        tools:ignore="TouchTargetSizeCheck" />

    <View
        android:id="@+id/fragment_settings_steps_login_line3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/margin_12dp"
        android:layout_marginLeft="@dimen/margin_20dp"
        android:layout_marginRight="@dimen/margin_20dp"
        android:background="@color/line_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_settings_steps_login_never_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>