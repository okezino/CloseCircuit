<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashScreen">

    <fragment
        android:id="@+id/emailVerificationSuccessfulFragment"
        android:name="com.example.closedcircuitapplication.authentication.presentation.ui.screens.EmailVerificationSuccessfulFragment"
        android:label="fragment_email_verification_successful"
        tools:layout="@layout/fragment_email_verification_successful" />
    <fragment
        android:id="@+id/splashScreen"
        android:name="com.example.closedcircuitapplication.authentication.presentation.ui.screens.SplashScreenFragment"
        android:label="fragment_splash_screen"
        tools:layout="@layout/fragment_splash_screen" >
        <action
            android:id="@+id/action_splashScreen_to_viewPagerFragment"
            app:destination="@id/viewPagerFragment"
            app:popUpTo="@id/splashScreen"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/viewPagerFragment"
        android:name="com.example.closedcircuitapplication.authentication.presentation.ui.screens.ViewPagerFragment"
        android:label="fragment_view_pager"
        tools:layout="@layout/fragment_view_pager" >
        <action
            android:id="@+id/action_viewPagerFragment_to_welcomeScreenFragment2"
            app:destination="@id/welcomeScreenFragment"
            app:popUpTo="@id/viewPagerFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_viewPagerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/verifyEmailFragment"
        android:name="com.example.closedcircuitapplication.authentication.presentation.ui.screens.VerifyEmailFragment"
        android:label="fragment_verify_email"
        tools:layout="@layout/fragment_verify_email">
        <action
            android:id="@+id/action_verifyEmailFragment_to_emailVerificationSuccessfulFragment"
            app:destination="@id/emailVerificationSuccessfulFragment" />
        <action
            android:id="@+id/action_viewPagerFragment_to_welcomeScreenFragment"
            app:destination="@id/welcomeScreenFragment"
            app:popUpTo="@id/viewPagerFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/welcomeScreenFragment"
        android:name="com.example.closedcircuitapplication.authentication.presentation.ui.screens.WelcomeScreenFragment"
        android:label="fragment_welcome_screen"
        tools:layout="@layout/fragment_welcome_screen">
        <action
            android:id="@+id/action_welcomeScreenFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_welcomeScreenFragment_to_createAccountFragment"
            app:destination="@id/createAccountFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true"/>

    </fragment>
    <fragment
        android:id="@+id/createAccountFragment"
        android:name="com.example.closedcircuitapplication.authentication.presentation.ui.screens.CreateAccountFragment"
        android:label="fragment_create_account"
        tools:layout="@layout/fragment_create_account">
        <action
            android:id="@+id/action_createAccountFragment_to_welcomeScreenFragment"
            app:destination="@id/welcomeScreenFragment" />
        <action
            android:id="@+id/action_createAccountFragment_to_loginFragment"
            app:destination="@id/loginFragment"/>
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.closedcircuitapplication.authentication.presentation.ui.screens.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_welcomeScreenFragment"
            app:destination="@id/welcomeScreenFragment"/>
        <action
            android:id="@+id/action_loginFragment_to_forgotPasswordFragment"
            app:destination="@id/forgotPasswordFragment"/>
        <action
            android:id="@+id/action_loginFragment_to_createAccountFragment"
            app:destination="@id/createAccountFragment"/>
        <action
            android:id="@+id/action_loginFragment_to_dashboardFragment2"
            app:destination="@id/dashboardFragment2" />
    </fragment>
    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="com.example.closedcircuitapplication.authentication.presentation.ui.screens.ForgotPasswordFragment"
        android:label="fragment_forgot_password"
        tools:layout="@layout/fragment_forgot_password" >
        <action
            android:id="@+id/action_forgotPasswordFragment_to_recoverPasswordOtpFragment"
            app:destination="@id/recoverPasswordOtpFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/recoverPasswordOtpFragment"
        android:name="com.example.closedcircuitapplication.authentication.presentation.ui.screens.RecoverPasswordOtpFragment"
        android:label="fragment_recover_password_otp"
        tools:layout="@layout/fragment_recover_password_otp" >
        <action
            android:id="@+id/action_recoverPasswordOtpFragment_to_resetYourPasswordFragment"
            app:destination="@id/resetYourPasswordFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true"/>
        <argument
            android:name="userEmail"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/resetYourPasswordFragment"
        android:name="com.example.closedcircuitapplication.authentication.presentation.ui.screens.ResetYourPasswordFragment"
        android:label="fragment_reset_your_password"
        tools:layout="@layout/fragment_reset_your_password" >
        <action
            android:id="@+id/action_resetYourPasswordFragment_to_passwordRecoverySuccessfulFragment"
            app:destination="@id/passwordRecoverySuccessfulFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true"/>
        <argument
            android:name="userEmail"
            app:argType="string" />
        <argument
            android:name="otp"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/passwordRecoverySuccessfulFragment"
        android:name="com.example.closedcircuitapplication.authentication.presentation.ui.screens.PasswordRecoverySuccessfulFragment"
        android:label="fragment_password_recovery_successful"
        tools:layout="@layout/fragment_password_recovery_successful" >
        <action
            android:id="@+id/action_passwordRecoverySuccessfulFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/messageFragment"
        android:name="com.example.closedcircuitapplication.dashboard.presentation.ui.screens.MessageFragment"
        android:label="fragment_message"
        tools:layout="@layout/fragment_message" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.closedcircuitapplication.dashboard.presentation.ui.screens.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/accountFragment"
        android:name="com.example.closedcircuitapplication.dashboard.presentation.ui.screens.AccountFragment"
        android:label="fragment_account"
        tools:layout="@layout/fragment_account" >
        <action
            android:id="@+id/action_accountFragment_to_forgotPasswordFragment"
            app:destination="@id/forgotPasswordFragment"/>
    </fragment>
    <fragment
        android:id="@+id/createAPlanFragment"
        android:name="com.example.closedcircuitapplication.plan.presentation.ui.screens.CreateAPlanFragment"
        android:label="fragment_create_a_plan"
        tools:layout="@layout/fragment_create_a_plan" />
    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.closedcircuitapplication.common.presentation.ui.MainActivity"
        android:label="app_bar_dashboard"
        tools:layout="@layout/app_bar_dashboard" />
    <fragment
        android:id="@+id/createPlanSummaryFragment"
        android:name="com.example.closedcircuitapplication.plan.presentation.ui.screens.CreatePlanSummaryFragment"
        android:label="fragment_create_plan_summary"
        tools:layout="@layout/fragment_create_plan_summary" />
    <fragment
        android:id="@+id/uploadImageBottomSheetFragment"
        android:name="com.example.closedcircuitapplication.ui.createAPlantScreenUi.UploadImageBottomSheetFragment"
        android:label="fragment_upload_image_bottom_sheet"
        tools:layout="@layout/fragment_upload_image_bottom_sheet" />
    <fragment
        android:id="@+id/dashboardFragment2"
        android:name="com.example.closedcircuitapplication.dashboard.presentation.ui.screens.DashboardFragment"
        android:label="DashboardFragment" />

</navigation>